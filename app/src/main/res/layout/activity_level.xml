<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/level_background"
    tools:context=".activities.LevelActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Level"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"/>

    <Button
        android:id="@+id/btn_easy"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Easy"
        android:textColor="@color/white"
        android:background="@drawable/shape_button_rounded_easy"/>

    <Button
        android:id="@+id/btn_normal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Normal"
        android:textColor="@color/white"
        android:background="@drawable/shape_button_rounded_normal"/>

    <Button
        android:id="@+id/btn_hard"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Hard"
        android:textColor="@color/white"
        android:background="@drawable/shape_button_rounded_hard"/>

    <Button
        android:id="@+id/btn_super_hard"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Super Hard"
        android:textColor="@color/white"
        android:background="@drawable/shape_button_rounded_superhard"/>


</LinearLayout>